<body>

<div class="form-container">
    <h2>טופס מזל טוב</h2>
    <form>
        <label for="name">שם:</label>
        <input list="nameList" id="name" name="name" autocomplete="off" placeholder="הקלד שם...">
        <datalist id="nameList"></datalist>

        <label for="class">כיתה:</label>
        <input type="text" id="class" name="class" readonly>

        <label for="event">האירוע:</label>
        <input type="text" id="event" name="event" readonly>

        <input type="submit" value="שלח">
    </form>
</div>

<script>
// מזהה הגיליון
const sheetId = "1PfrJ6101ewX6kEXJz5-EpCvwR9UyGkrWY_c89FRyFWE";

// שם הגיליון (Sheet) שבו הנתונים
const sheetName = "Data";

// קריאת הנתונים
const url = `https://docs.google.com/spreadsheets/d/${sheetId}/gviz/tq?tqx=out:json&sheet=${sheetName}`;

let dataRows = [];

fetch(url)
  .then(res => res.text())
  .then(data => {
    const json = JSON.parse(data.substr(47).slice(0, -2));
    dataRows = json.table.rows;

    const nameList = document.getElementById("nameList");
    dataRows.forEach(row => {
      if (row.c[0] && row.c[0].v) {
        let option = document.createElement("option");
        option.value = row.c[0].v;
        nameList.appendChild(option);
      }
    });
  });

// כאשר בוחרים שם — למלא את הכיתה והאירוע
document.getElementById("name").addEventListener("input", function() {
    const selectedName = this.value;
    const row = dataRows.find(r => r.c[0] && r.c[0].v === selectedName);
    if (row) {
        document.getElementById("class").value = row.c[1]?.v || "";
        document.getElementById("event").value = row.c[2]?.v || "";
    } else {
        document.getElementById("class").value = "";
        document.getElementById("event").value = "";
    }
});
</script>

</body>
